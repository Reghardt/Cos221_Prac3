<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/sidebarPartial'); %>
</header>

<style>
  /*style form*/
  form{
    padding-bottom: 60px;
  }
  /* style form input*/
  form input[type=submit] {

    background-color: #DE354C;;
    border: none;
    color: white;
    padding: 16px 32px;
    text-decoration: none;
    margin: 4px 2px;
    cursor: pointer;
  }


</style>

<h2 style="text-align: center; padding-bottom: 20px;">Register candidate</h2>

<form action="registerCandidateAuth" method = "post">
  <label for="fname"><b>First name:</b></label><br>
  <input type="text" id="fname" name="fname" placeholder="type first name here..." value="" required><br>
  <label for="lname"><b>Last name:</b></label><br>
  <input type="text" id="lname" name="lname" placeholder="type last name here..."  value="" required><br><br>
  
  <label for="role"><b>Candidate Role:</b></label><br>
  <input type="text" id="role" name="role" placeholder="type candidate role here..." value="" required><br><br>
  
  

  <br>
  <label for="idNumber"><b>ID number:</b></label><br>
  <input type="text" id="idNumber" name="idNumber" placeholder="type id number here..." required><br><br>
  
  <label for="party"><b>Party name:</b></label><br>
  <select class="form-control" id="sel1" name="partyName">
    <% polParties.forEach(function(party) { %>
        <option><%= party.PartyName %></option>>
    <% }); %>
  </select>
  
  <label for="municName"><b>Municipality to run in:</b></label><br>
  <select class="form-control" id="sel2" name="municName">
    <% municipalities.forEach(function(munic) { %>
        <option><%= munic.municipalityName %></option>>
    <% }); %>
  </select>
  
  <input type="submit" value="Submit">
</form> 

<footer>
  <%- include('../partials/footer'); %>
</footer>
</body>